{
  "name": "prompt-hub",
  "version": "1.0.0",
  "description": "AI自动提取和添加提示词的MCP服务器 - 专注Docker部署",
  "private": true,
  "type": "module",
  "author": "PromptHub Team",
  "license": "MIT",
  "keywords": [
    "mcp",
    "ai",
    "prompts",
    "typescript",
    "docker",
    "nextjs",
    "supabase"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "./start.sh",
    "stop": "./stop.sh",
    "dev": "concurrently \"npm run mcp:dev\" \"npm run web:dev\"",
    "mcp:install": "cd mcp && npm install",
    "web:install": "cd web && npm install",
    "supabase:install": "cd supabase && npm install",
    "install:all": "npm install && npm run mcp:install && npm run web:install && npm run supabase:install",
    "mcp:build": "cd mcp && npm run build",
    "web:build": "cd web && npm run build",
    "build:all": "npm run mcp:build && npm run web:build",
    "mcp:dev": "cd mcp && npm run dev",
    "web:dev": "cd web && npm run dev",
    "mcp:start": "cd mcp && npm start",
    "web:start": "cd web && npm start",
    "mcp:test": "cd mcp && npm test",
    "web:test": "cd web && npm test",
    "test": "npm run mcp:test && npm run web:test",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "typecheck": "cd mcp && npm run typecheck && cd ../web && npm run typecheck",
    "health:check": "curl -f http://localhost:9010/api/health && curl -f http://localhost:9011/api/health",
    "docker:build": "docker build -t prompthub .",
    "docker:build:optimized": "docker build -f Dockerfile.optimized -t prompthub:optimized .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:test": "./test-docker.sh",
    "docker:cleanup": "./test-docker.sh cleanup",
    "docker:deploy": "./deploy-docker.sh",
    "supabase:start": "cd supabase && supabase start",
    "supabase:stop": "cd supabase && supabase stop",
    "supabase:reset": "cd supabase && supabase db reset",
    "supabase:migrate": "cd supabase && supabase db push",
    "deps:check": "depcheck",
    "deps:update": "npm update && cd mcp && npm update && cd ../web && npm update && cd ../supabase && npm update",
    "clean": "rm -rf node_modules mcp/node_modules web/node_modules supabase/node_modules mcp/dist web/.next",
    "reset": "npm run clean && npm run install:all && npm run build:all"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.50",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "babel-jest": "^29.7.0",
    "chai": "^5.2.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-environment-node-single-context": "^29.4.0",
    "mocha": "^11.5.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.1.0",
    "sinon": "^20.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "no-var": "error",
      "no-global-assign": "error",
      "prefer-template": "error",
      "@typescript-eslint/prefer-function-type": "error"
    },
    "env": {
      "node": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/mcp/src",
      "<rootDir>/mcp/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/prompt-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/prompt-hub/issues"
  },
  "homepage": "https://github.com/your-username/prompt-hub#readme"
}
