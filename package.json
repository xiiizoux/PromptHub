{
  "name": "prompt-hub",
  "version": "1.0.0",
  "description": "AI自动提取和添加提示词的MCP服务器",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "./start.sh",
    "stop": "./stop.sh",
    "mcp:install": "cd mcp && npm install",
    "web:install": "cd web && npm install",
    "install:all": "npm run mcp:install && npm run web:install",
    "mcp:build": "cd mcp && npm run build",
    "web:build": "cd web && npm run build",
    "build:all": "npm run mcp:build && npm run web:build",
    "start:production": "node production-server.js",
    "mcp:dev": "cd mcp && npm run dev",
    "web:dev": "cd web && npm run dev",
    "mcp:test": "cd mcp && npm test"
  },
  "keywords": [
    "mcp",
    "ai",
    "prompts",
    "typescript",
    "vercel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/bcryptjs": "^2.4.6",

    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.50",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "babel-jest": "^29.7.0",
    "chai": "^5.2.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-node-single-context": "^29.4.0",
