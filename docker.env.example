# Docker部署环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# 应用配置
NODE_ENV=production
API_KEY=your-secure-api-key-here

# 端口配置 - 严格按照项目规定
PORT=9010
FRONTEND_PORT=9011

# 传输类型
TRANSPORT_TYPE=sse

# 存储配置
STORAGE_TYPE=file
FORCE_LOCAL_STORAGE=true

# Supabase配置 (可选 - 如果使用云数据库)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# 本地PostgreSQL配置 (如果使用本地数据库)
POSTGRES_PASSWORD=prompthub123
DATABASE_URL=postgresql://prompthub:prompthub123@postgres:5432/prompthub

# Redis配置 (如果启用缓存)
REDIS_URL=redis://redis:6379

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# 安全配置
CORS_ORIGIN=http://localhost:9011
JWT_SECRET=your-jwt-secret-here

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000 